<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.CheckBox?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.adonai.fx.settings.SettingsMailConfigurationsController" alignment="TOP_CENTER" hgap="10" vgap="10" >
    <padding><Insets top="20" bottom="20" left="40" right="40"/> </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="80"/>
    </columnConstraints>

    <Label fx:id="lblTitle" userData="users.lblTitle" text="CONFIGURATION - MAIL" id="header" GridPane.halignment="CENTER" GridPane.fillWidth ="true" GridPane.rowIndex="0" GridPane.columnSpan="3"/>

    <Label text="SMTP Host" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="txtSmtpHost" userData="mail.txtSmtpHost" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>

    <Label text="SMTP Port" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="txtSmtpPort" userData="mail.txtSmtpPort" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>

    <Label text="SMTP Username" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="txtSmtpUsername" userData="mail.txtSmtpUsername" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>

    <Label text="SMTP Password" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="txtSmtpPassword" userData="mail.txtSmtpPassword" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>

    <Label text="Authenticated" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <CheckBox fx:id="chkAuthenticated" userData="mail.chkAuthenticated" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>

    <Label text="SSL" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <CheckBox fx:id="chkSSL" userData="mail.chkSSL" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>





</GridPane>