    <ListView fx:id="lviConfigurationList" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <StackPane fx:id="panConfigurationDetails" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.fillWidth="true" GridPane.hgrow="ALWAYS" GridPane.vgrow="NEVER"/>


</GridPane>