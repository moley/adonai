<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.adonai.ui.users.UsersController" alignment="CENTER"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" bottom="20" left="5" right="5"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="30"/>
    </columnConstraints>


    <ListView fx:id="lviUsers" GridPane.columnIndex="0" GridPane.rowIndex="0"
              GridPane.fillHeight="true" GridPane.vgrow="ALWAYS"/>
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="1"
             GridPane.fillHeight="false" GridPane.vgrow="NEVER" spacing="5">
        <Button fx:id="btnAddUser"/>
        <Button fx:id="btnRemoveUser"/>
    </HBox>

    <Label text="Username" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <TextField fx:id="txtUsername" GridPane.columnIndex="2" GridPane.rowIndex="0"
               GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>


</GridPane>