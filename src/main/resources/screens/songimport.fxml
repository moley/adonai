<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="org.adonai.ui.imports.SongImportController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10" >
    <padding><Insets top="5" bottom="5" left="5" right="5"/> </padding>

    <TextArea fx:id="txtImportText" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>

    <Button text="Import" fx:id="btnImport" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button text="Cancel" fx:id="btnCancel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
</GridPane>