<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<VBox fx:id="root" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.adonai.fx.editcontent.EditContentController">
    <padding><Insets top="40" bottom="40" left="30" right="30"/> </padding>


    <TextArea fx:id="txaText" styleClass="editortext"></TextArea>
    <ButtonBar>
        <buttons>
            <Button fx:id="btnSave" text="Save"></Button>
            <Button fx:id="btnCancel" text="Cancel"></Button>
        </buttons>
    </ButtonBar>
</VBox>