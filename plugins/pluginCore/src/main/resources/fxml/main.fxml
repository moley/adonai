<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<BorderPane fx:id="border" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.adonai.fx.main.MainController" style="-fx-background-color: #BBBBBB;">

    <top>
        <HBox fx:id="panHeader" fillHeight="true">
            <Button fx:id="btnScope"></Button>
            <Button fx:id="btnLive">
                <HBox.margin>
                    <Insets>
                        <right>20</right>
                    </Insets>
                </HBox.margin>
            </Button>
            <ComboBox fx:id="cboScope" userData="mainpage.cboScope" maxHeight="Infinity" styleClass="scopeChooser">
                <HBox.margin>
                    <Insets>
                        <right>20</right>
                    </Insets>
                </HBox.margin>
            </ComboBox>
            <HBox spacing="5" fx:id="panSongInfos" maxHeight="Infinity" alignment="CENTER" maxWidth="600" minWidth="600">
                <HBox.margin>
                    <Insets>
                        <right>20</right>
                    </Insets>
                </HBox.margin>
                <Label fx:id="lblId" styleClass="id"></Label>
                <Label fx:id="lblTitle" styleClass="title"></Label>
            </HBox>

            <ButtonBar>
                <buttons>
                    <Button fx:id="btnPlayerBeginning"></Button>
                    <Button fx:id="btnPlayerBackward"></Button>
                    <Button fx:id="btnPlayerPlay"></Button>
                    <Button fx:id="btnPlayerPause"></Button>
                    <Button fx:id="btnPlayerForward"></Button>
                    <Button fx:id="btnPlayerEnd"></Button>
                </buttons>
                <HBox.margin>
                    <Insets>
                        <right>20</right>
                    </Insets>
                </HBox.margin>
            </ButtonBar>
            <HBox spacing="5" fx:id="panSongDetails" maxHeight="Infinity" alignment="CENTER">
                <HBox.margin>
                    <Insets>
                        <right>20</right>
                    </Insets>
                </HBox.margin>
                <Label fx:id="lblLeadVoice" styleClass="leadVoice"></Label>
                <Button fx:id="btnOriginalKey" styleClass="chordButton"></Button>
                <Button fx:id="btnTransposedKey" styleClass="chordButton"></Button>

            </HBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <MenuButton fx:id="btnMainActions" userData="mainpage.btnMainActions"/>
        </HBox>


    </top>



</BorderPane>