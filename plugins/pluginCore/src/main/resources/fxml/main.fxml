<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<BorderPane fx:id="main" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.adonai.fx.main.MainController">

    <top>
        <HBox fx:id="panHeader" fillHeight="true" >
            <Button fx:id="btnWorkspace" maxHeight="Infinity" alignment="CENTER"></Button>
            <ComboBox fx:id="cboScope" userData="mainpage.cboScope" maxHeight="Infinity" styleClass="scopeChooser">
                <HBox.margin>
                    <Insets>
                        <right>20</right>
                    </Insets>
                </HBox.margin>
            </ComboBox>
            <ButtonBar >
                <buttons>
                    <Button fx:id="btnPlayerBeginning"></Button>
                    <Button fx:id="btnPlayerBackward"></Button>
                    <Button fx:id="btnPlayerPlay"></Button>
                    <Button fx:id="btnPlayerPause"></Button>
                    <Button fx:id="btnPlayerForward"></Button>
                    <Button fx:id="btnPlayerEnd"></Button>
                </buttons>
                <HBox.margin>
                    <Insets>
                        <right>50</right>
                    </Insets>
                </HBox.margin>
            </ButtonBar>
            <Button fx:id="btnLeadVoice" alignment="CENTER" styleClass="leadVoice">
                <HBox.margin>
                    <Insets>
                        <right>50</right>
                    </Insets>
                </HBox.margin>
            </Button>
            <Button fx:id="btnOriginalKey" styleClass="chordButton" ></Button>
            <Button fx:id="btnTransposedKey" styleClass="chordButton" ></Button>
            <Pane HBox.hgrow="ALWAYS"/>
            <MenuButton fx:id="btnMainActions" userData="mainpage.btnMainActions"/>
        </HBox>


    </top>



</BorderPane>