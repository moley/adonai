<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:id="panSetKey" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="org.adonai.fx.editcontent.SetKeyController" hgap="20" vgap="20" >

    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>

    <Label fx:id="lblTitle" userData="users.lblTitle" text="CONFIGURATION - STYLE SCHEMAS" id="header" GridPane.halignment="CENTER" GridPane.fillWidth ="true" GridPane.rowIndex="0" GridPane.columnSpan="2"/>


    <Button fx:id="btnFrom" GridPane.columnIndex="0" GridPane.rowIndex="1"></Button>
    <ComboBox fx:id="cboTo" GridPane.columnIndex="1" GridPane.rowIndex="1"></ComboBox>

    <TextArea styleClass="editortext" wrapText="true" fx:id="txtTextFrom" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS" GridPane.fillHeight="true"/>
    <TextArea styleClass="editortext" wrapText="true" fx:id="txtTextTo" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.vgrow="ALWAYS" GridPane.fillHeight="true"/>

    <Button fx:id="btnSave" text="Save" GridPane.columnIndex="0" GridPane.rowIndex="3"></Button>
    <Button fx:id="btnCancel" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

</GridPane>