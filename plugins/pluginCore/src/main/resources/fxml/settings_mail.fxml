<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.adonai.fx.settings.SettingsMailConfigurationsController" alignment="CENTER" hgap="10" vgap="10" >
    <padding><Insets top="20" bottom="20" left="10" right="10"/> </padding>
    <columnConstraints>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="80"/>
    </columnConstraints>

    <Label text="SMTP Host" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="txtSmtpHost" userData="mail.txtSmtpHost" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>

    <Label text="SMTP Port" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="txtSmtpPort" userData="mail.txtSmtpPort" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>

    <Label text="SMTP Username" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="txtSmtpUsername" userData="mail.txtSmtpUsername" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>

    <Label text="SMTP Password" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="txtSmtpPassword" userData="mail.txtSmtpPassword" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER"/>





</GridPane>